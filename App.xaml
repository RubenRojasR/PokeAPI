<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PokeAPI"
             x:Class="PokeAPI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="PokedexColor">#9f0e10</Color>
            <Color x:Key="HPColor">#d53943</Color>
            <Color x:Key="AttackColor">#fba825</Color>
            <Color x:Key="DeffenseColor">#0190e5</Color>
            <Color x:Key="SpAttackColor">#d1860f</Color>
            <Color x:Key="SpDefenseColor">#0071b4</Color>
            <Color x:Key="SpeedColor">#8eafc4</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
